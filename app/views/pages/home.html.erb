<div class="banner">
  <div class="main-box">
    <div class="d-flex">
      <h1>Book your next adventure!</h1>
    </div>

    <div class="d-flex search-box justify-content-center">
      <div class="">
        <input class="search-text" name="search_text" placeholder="Where are you going?" type="text">
      </div>
      <div class="search-icon">
        <i class="fas fa-search"></i>
      </div>
    </div>
  </div>
</div>

  <div class="py-5">
<div class="container d-flex flex-column align-items-center my-3">
  <h1>Places</h1>

<div class="cards">
  <% @places.each do |place| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <h5 class="card-title"><%= link_to place.name, place %></h5>
    <p class="card-text">R$<%= place.price_per_day %></p>
  </div>
<% end %>  
</div>

  </div>
