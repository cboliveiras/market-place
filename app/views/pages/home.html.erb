<div class="banner">
  <div class="main-box">
    <div class="d-flex">
      <h1>Book your next adventure!</h1>
    </div>

    <div class="d-flex search-box justify-content-center">
      <div class="">
        <input class="search-text" name="search_text" placeholder="Where are you going?" type="text">
      </div>
      <div class="search-icon">
        <i class="fas fa-search"></i>
      </div>
    </div>
  </div>
</div>

  <div class="py-5">
<div class="container d-flex flex-column">
  <h1>Places</h1>

<div class="cards">
  <% @places.each do |place| %>
  <% image = place.images.attached? ? place.images.key : "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg" %>
  

  <div class="card" style="width: 18rem;">
    <%# <img class="card-img-top" image_tag("icon") alt="Card image cap"> %>
    <%#= url_for(place.images) %>
    <%#= image_tag(url_for(user.avatar)) %>
    <img src="<%= cl_image_path image,crop: :fill %>" alt="Italian Trulli" width="287" height="150">
    <div class="card-body">
      <h5 class="card-title"><%= link_to place.name, place %></h5> 
      <p class="card-text">R$<%= place.price_per_day %></p>
      <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
    </div>
  </div>
<% end %>  
</div>

  </div>
