<div class="banner d-flex flex-column align-items-center">
  <div class="main-box d-flex flex-column align-items-center">
    <div class="d-flex">
      <h1>Book your next adventure!</h1>
    </div>

    <div class="d-flex search-box justify-content-center">
      <div class="search-text">
        <%= form_tag places_path, method: :get do %>
          <%= text_field_tag :search_query,
            params[:search_query],
            class: "form-control",
            placeholder: "Find your next destination"
          %>
      </div>
      <div class="d-flex search-icon">
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>

  <div class="explore-container d-flex justify-content-center">
    <i class="fa fa-angle-down" aria-hidden="true"></i>
    <div class="explore-tag">
      <h4>EXPLORE</h4>
    </div>
    <i class="fa fa-angle-down" aria-hidden="true"></i>
  </div>

</div>



<div class="container d-flex flex-column">
  <div class="page-title d-flex justify-content-center">
    <h1>Our Places</h1>
  </div>

  <div class="wrapper">
    <% @places.each do |place| %>
      <div class="card card-container justify-between" style="width: 18rem;">
        <% if place.image.attached? %>
          <img class="card-img-top" src="<%= cl_image_path place.image.key %>" width="100%" height="180" alt="Default Image">
        <% else %>
          <img class="card-img-top" src="https://res.cloudinary.com/safely/image/upload/v1604452342/tvt5xuita7wrx9ypidsa.png" width="100%" height="180" alt="Default Image">
        <% end %>
        <div class="card-content">
          <h5 class="card-title"><%= link_to place.name, place %></h5>
          <div class="card-body">
            <div>
              <p class="card-text"><%= place.location_type %></p>
              <p class="card-review"><%= '⭐  '%> <%=  place.place_avg_review %>
                (<%=  place.reviews.count %>)
              </p>
            </div>
            <p class="card-price">R$<%= place.price_per_day %>/night</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
