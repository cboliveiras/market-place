<div class="banner">
  <div class="main-box">
    <div class="d-flex">
      <h1>Book your next adventure!</h1>
    </div>

    <div class="d-flex search-box justify-content-center">
      <div class="">
        <input class="search-text" name="search_text" placeholder="Where are you going?" type="text">
      </div>
      <div class="search-icon">
        <i class="fas fa-search"></i>
      </div>
    </div>
  </div>
</div>

  <div class="py-5">
<div class="container d-flex flex-column">
  <h1>Places</h1>

<div class="cards">
  <% @places.each do |place| %>
  <% image = place.images.attached? ? place.images.key : "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg" %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path image, height: 300, width: 400, crop: :fill %>')">
    <div class="card-content">
      <h5 class="card-title"><%= link_to place.name, place %></h5>
      <p class="card-text">R$<%= place.price_per_day %></p>
      <p class="card-review">
      <% place.average_rating.times do %>
      <i class="far fa-star"></i>
      <% end %></p>
    </div>
  </div>
<% end %>  
</div>

  </div>
