<div class="container">
    <%= simple_form_for @place do |f| %>
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :location_type %>
        <%= f.input :price_per_day %>
        <%= f.input :image, as: :file %>
        <%= f.submit class: "btn btn-dark btn-sm m-2"%>
    <% end %>
        <%= link_to 'My Places', :my_places, class: "btn btn-dark btn-sm m-2"%>
</div>
