
<div class="container d-flex flex-column align-items-center my-3">
  <h1>Places</h1>

<div class="cards">
  <% @places.each do |place| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <h5 class="card-title"><%= link_to place.name, place %></h5>
    <p class="card-text">R$<%= place.price_per_day %></p>
  </div>
<% end %>  
</div>

