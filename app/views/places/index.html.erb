<div class="container d-flex flex-column">
  <div class="page-title d-flex justify-content-center">
    <h1>Our Places</h1>
  </div>

  <div class="wrapper">
    <% @places.each do |place| %>
      <div class="card card-container justify-between" style="width: 18rem;">
        <% if place.image.attached? %>
          <img class="card-img-top" src="<%= cl_image_path place.image.key %>" width="100%" height="180" alt="Default Image">
        <% else %>
          <img class="card-img-top" src="https://res.cloudinary.com/safely/image/upload/v1604452342/tvt5xuita7wrx9ypidsa.png" width="100%" height="180" alt="Default Image">
        <% end %>
        <div class="card-content">
          <h5 class="card-title"><%= link_to place.name, place %></h5>
          <div class="card-body">
            <div>
              <p class="card-text"><%= place.location_type %></p>
              <p class="card-review"><%= 'â­' * (place.place_avg_review) %>
                (<%=  place.reviews.count %> reviews)</i>
              </p>
            </div>
            <p class="card-price">R$<%= place.price_per_day %>/night</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
