<div class="container d-flex flex-column">
  <div class="page-title d-flex justify-content-center">
    <h1>My Places</h1>
  </div>

  <div class="row justify-content-center">
    <%= link_to "Add a new place", new_place_path, class: "btn btn-dark btn-sm m-2" %>
  </div>

  <div class="wrapper">
    <% @places.each do |place| %>
      <div class="single-card card-container justify-between" style="width: 18rem;">
        <% if place.image.attached? %>
          <img class="card-img-top" src="<%= cl_image_path place.image.key %>" width="100%" height="180" alt="Default Image">
        <% else %>
          <img class="card-img-top" src="https://res.cloudinary.com/safely/image/upload/v1604452342/tvt5xuita7wrx9ypidsa.png" width="100%" height="180" alt="Default Image">
        <% end %>
        <div class="card-content">
          <h5 class="card-title"><%= place.name %></h5>
          <p class="card-text"><%= place.location %></p>
          <p class="card-text"><%= place.location_type %></p>
          <p class="card-text">R$<%= place.price_per_day %>/night</p>
          <%= link_to "Edit", edit_place_path(place), class: "btn btn-dark btn-sm m-2" %>
          <%= link_to "Delete", place_path(place), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark btn-sm m-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
