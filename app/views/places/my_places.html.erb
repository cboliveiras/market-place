<div class="container">
  <div class="d-flex justify-content-center">
    <h1>My Places</h1>
  </div>

  <div class="row justify-content-center">
    <%= link_to "Add new place", new_place_path, class: "btn btn-dark btn-sm m-2" %>
  </div>

  <% @places.each do |place| %>
    <div>
      <%= place.id %>
      <%= place.name %>
      <%= place.location %>
      <%= place.location_type %>
      <%= place.price_per_day %>
      <%= link_to "Edit", edit_place_path(place), class: "btn btn-dark btn-sm m-2" %>
      <%= link_to "Delete", place_path(place), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark btn-sm m-2" %>
    </div>
  <% end %>

</div>
