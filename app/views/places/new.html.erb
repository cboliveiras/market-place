<div class="container justify-content-center">
  <div class="page-title">
    <h1>Add a new Place</h1>
  </div>

  <div class="d-flex justify-content-center">
    <div class="single-slim-card d-flex justify-content-center">
      <div class="single-slim-inside">
        <%= simple_form_for [@user, @place] do |f| %>
          <%= f.input :name, label: 'Place Name' %>
          <%= f.input :location, label: 'Place Location' %>
          <%= f.input :location_type, label: 'Location Type' %>
          <%= f.input :price_per_day, label: 'Price per Day' %>
          <%= f.input :image, as: :file %>
          <%= f.submit 'Add', class: 'btn btn-dark btn-sm btn-block my-1' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
