<div class="container">
  <div class="single-card mt-0 mb-5" style="width: auto;">
    <div class="row no-gutters">
      <div class="col-auto">
        <% if @place.image.attached? %>
          <img class="card-img-top" src="<%= cl_image_path @place.image.key %>" width="100%" height="180" alt="Default Image">
        <% else %>
          <img class="card-img-top" src="https://res.cloudinary.com/safely/image/upload/v1604452342/tvt5xuita7wrx9ypidsa.png" width="100%" height="180" alt="Location Photo">
        <% end %>
      </div>
      <div class="col">
        <div class="card-body d-flex flex-column justify-content-between">
          <h4 class="card-title page-title"><strong><%= @place.name %></strong></h4>
          <p class="card-text">Description</p>
          <p class="card-text"><h6 class="text-muted">R$<strong><%= @place.price_per_day %></strong>/night</h6></p>
          <h2 class="card-text"><%= @place.place_avg_review %></h2>
        </div>
      </div>
    </div>
  </div>

  <% if user_signed_in? %>
    <%= simple_form_for [@place, @reservation] do |f| %>
    <%= f.input :initial_date, as: :date%>
    <%= f.input :final_date, as: :date%>
    <%= f.submit 'Make a reservation', class: 'btn btn-dark btn-sm m-2' %>
    <% end %>
  <% else %>
    <h1>Sign in to book this place</h1>
    <%= link_to "Sign In", new_user_session_path %>
  <% end %>


  <div class="container wrapper my-5 d-flex justify-content-around">
    <div class="row">
      <% @place.reviews.each do |review| %>
      <div class="col-6">
        <div class="card card-body my-3" style="width: 27rem; border-radius: 5px;">
          <div class="d-flex">

            <img class="avatar avatar-32 img-circle align-self-center" src="https://avatars3.githubusercontent.com/u/10161253?s=460&u=1932640443a373f365f930059cba66be868fb534&v=4">

            <div class="d-flex flex-column px-3">
              <div>
                <%= review.user.first_name %>
                <%= review.user.last_name %>
              </div>
              <div>
                <%= review.created_at.strftime("%d/%m/%Y") %>
              </div>
            </div>

            <div class="d-flex flex-column align-items-end ml-auto">
              <div>
                Location:
                <% review.place_rating.times do %>
                  <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                  </svg>
                <% end %>
              </div>

              <div>
                Owner:
                <% review.user_rating.times do %>
                  <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                  </svg>
                <% end %>
              </div>
            </div>

          </div>

          <div class="pt-4">
            <%= review.comments %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
