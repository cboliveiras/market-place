<div class=container>
  <div class="page-title row justify-content-center">
    <h1>Rate and review your stay</h1>
  </div>

  <div class="single-card">
    <%= simple_form_for [@place, @review] do |f| %>
      <%= f.input :place_rating, label: "How would you rate this place?", collection: 1..5 %>
      <%= f.input :user_rating, label: "What about your host?", collection: 1..5 %>
      <%= f.input :comments, label: "Any comments?" %>
      <%= f.button :submit, label: "Submit review", class: "btn btn-primary btn-sm m-2" %>
    <% end %>
  </div>
</div>
