<div class="container justify-content-center">
  <div class="page-title">
    <h1>Rate and review your stay</h1>
  </div>

  <div class="d-flex justify-content-center">
    <div class="single-slim-card d-flex justify-content-center">
      <div class="single-slim-inside">
        <%= simple_form_for [@place, @review] do |f| %>
          <%= f.input :place_rating, label: "How would you rate this place?", collection: 1..5 %>
          <%= f.input :user_rating, label: "What about your host?", collection: 1..5 %>
          <%= f.input :comments, label: "Any comments?" %>
          <%= f.button :submit, label: "Submit review", class: "btn btn-dark btn-sm btn-block my-1" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
